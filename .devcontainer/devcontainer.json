{
    "build": {
        "dockerfile": "../images/ubuntu-dev-tools/Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "hashicorp.terraform",
                "ms-azure-devops.azure-pipelines",
                "ms-azuretools.vscode-azurecontainerapps",
                "ms-azuretools.vscode-azureresourcegroups",
                "ms-azuretools.vscode-azureterraform",
                "ms-azuretools.vscode-azurevirtualnetwork",
                "ms-azuretools.vscode-docker-registry",
                "ms-azuretools.vscode-docker-remote",
                "ms-azuretools.vscode-docker-tools",
                "ms-azuretools.vscode-docker",
                "ms-kubernetes-tools.vscode-aks-tools",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "ms-vscode.azure-account",
                "ms-vscode.azurecli",
                "ms-vscode.powershell",
                "vscode-icons-team.vscode-icons"
            ],
            "settings": {
                "[PowerShell]": {
                  "editor.defaultFormatter": "ms-vscode.powershell",
                  "editor.formatOnPaste": false,
                  "editor.formatOnSave": true,
                  "editor.formatOnType": true,
                  "editor.snippetSuggestions": "inline"
                },
                "terminal.integrated.profiles.linux": {
                  "pwsh": {
                    "path": "/usr/bin/pwsh",
                    "icon": "terminal-powershell"
                  }
                },
                "files.defaultLanguage": "powershell",
                "terminal.integrated.defaultProfile.linux": "pwsh"
            },          
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "/usr/bin/pwsh -nop -f ./.devcontainer/createorupdate.ps1 | tee ~/post-create.log"
}